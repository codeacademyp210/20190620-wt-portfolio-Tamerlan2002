<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("About", "Index", "Abouts", new { area = "Admin" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Blog items", "Index", "BlogItems", new { area = "Admin" }, new { @class = "navbar-brand" })
                @Html.ActionLink("About(brief)", "Index", "BriefAbouts", new { area = "Admin" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Contact", "Index", "Contacts", new { area = "Admin" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Education", "Index", "EducationTables", new { area = "Admin" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Experience", "Index", "ExperienceTables", new { area = "Admin" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Languages", "Index", "Languages", new { area = "Admin" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Personal Details", "Index", "PersonalDetails", new { area = "Admin" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Recomendation", "Index", "Recommendations", new { area = "Admin" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Skill", "Index", "Skills", new { area = "Admin" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>